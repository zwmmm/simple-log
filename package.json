{
  "name": "simple-log",
  "displayName": "Simple-Log",
  "description": "Lightweight, multi-language log insertion tool for VSCode",
  "version": "0.1.0",
  "publisher": "wayne",
  "author": {
    "name": "Wayne"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "log",
    "console",
    "debug",
    "javascript",
    "typescript",
    "react",
    "jsx",
    "tsx",
    "vue",
    "python",
    "java",
    "go"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-log.insertLog",
        "title": "Simple-Log: Insert Log"
      },
      {
        "command": "simple-log.commentAll",
        "title": "Simple-Log: Comment All Logs"
      },
      {
        "command": "simple-log.deleteAll",
        "title": "Simple-Log: Delete All Logs"
      },
      {
        "command": "simple-log.showPanel",
        "title": "Simple-Log: Show Log Manager Panel"
      }
    ],
    "keybindings": [
      {
        "command": "simple-log.insertLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "simple-log.commentAll",
        "key": "alt+shift+c",
        "mac": "alt+shift+c"
      },
      {
        "command": "simple-log.deleteAll",
        "key": "alt+shift+d",
        "mac": "alt+shift+d"
      },
      {
        "command": "simple-log.showPanel",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      }
    ],
    "configuration": {
      "title": "Simple-Log",
      "properties": {
        "simple-log.prefix": {
          "type": "string",
          "default": "üìù",
          "description": "Prefix symbol for log messages"
        },
        "simple-log.useBackticks": {
          "type": "boolean",
          "default": false,
          "description": "Use backticks (template strings) for JavaScript/TypeScript"
        },
        "simple-log.includeTimestamp": {
          "type": "boolean",
          "default": false,
          "description": "Include timestamp in log messages"
        },
        "simple-log.includeFilename": {
          "type": "boolean",
          "default": false,
          "description": "Include filename in log messages"
        },
        "simple-log.includeLineNumber": {
          "type": "boolean",
          "default": false,
          "description": "Include line number in log messages"
        },
        "simple-log.insertMode": {
          "type": "string",
          "enum": [
            "simple",
            "smart"
          ],
          "default": "smart",
          "description": "Log insertion mode",
          "enumDescriptions": [
            "Simple mode: Insert at next line (fast, reliable)",
            "Smart mode: Use AST analysis for intelligent positioning (JS/TS only)"
          ]
        },
        "simple-log.astAnalysisScope": {
          "type": "string",
          "enum": [
            "local",
            "file"
          ],
          "default": "file",
          "description": "AST analysis scope (only for smart mode)",
          "enumDescriptions": [
            "Analyze local context (¬±N lines) - fast for large files",
            "Analyze entire file - accurate for complex nesting (limited by maxFileLinesForFullParse)"
          ]
        },
        "simple-log.localContextLines": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 100,
          "description": "Number of context lines for local AST analysis (only for smart mode + local scope)"
        },
        "simple-log.maxFileLinesForFullParse": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 50000,
          "description": "Maximum file lines for full file parsing. Files larger than this will fallback to local analysis even if 'file' scope is selected"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "compile": "tsc -p ./",
    "lint": "oxlint src",
    "format": "oxlint --fix src",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "oxc-parser": "^0.104.0"
  },
  "optionalDependencies": {
    "@oxc-parser/binding-darwin-arm64": "0.104.0",
    "@oxc-parser/binding-darwin-x64": "0.104.0",
    "@oxc-parser/binding-win32-x64-msvc": "0.104.0",
    "@oxc-parser/binding-win32-arm64-msvc": "0.104.0",
    "@oxc-parser/binding-linux-x64-gnu": "0.104.0",
    "@oxc-parser/binding-linux-arm64-gnu": "0.104.0",
    "@oxc-parser/binding-linux-x64-musl": "0.104.0",
    "@oxc-parser/binding-linux-arm64-musl": "0.104.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.19.0",
    "oxlint": "^0.11.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zwmmm/simple-log"
  },
  "license": "MIT"
}
