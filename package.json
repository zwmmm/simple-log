{
  "name": "simple-log",
  "displayName": "Simple Log",
  "description": "Lightweight, multi-language log insertion tool for VSCode",
  "version": "0.2.1",
  "publisher": "Sanyi",
  "icon": "images/logo.png",
  "author": {
    "name": "Wayne"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "log",
    "console",
    "debug",
    "javascript",
    "typescript",
    "react",
    "jsx",
    "tsx",
    "vue",
    "python",
    "java",
    "go"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "simple-log-explorer",
          "title": "Simple Log",
          "icon": "$(output)"
        }
      ]
    },
    "views": {
      "simple-log-explorer": [
        {
          "id": "simpleLogTreeView",
          "name": "Log Explorer",
          "contextualTitle": "Simple Log Manager"
        }
      ]
    },
    "commands": [
      {
        "command": "simple-log.insertLog",
        "title": "Simple-Log: Insert Log"
      },
      {
        "command": "simple-log.commentAll",
        "title": "Simple-Log: Comment All Logs"
      },
      {
        "command": "simple-log.deleteAll",
        "title": "Simple-Log: Delete All Logs"
      },
      {
        "command": "simple-log.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "simple-log.clearCacheAndRefresh",
        "title": "Clear Cache and Refresh",
        "icon": "$(clear-all)"
      },
      {
        "command": "simple-log.deleteFolder",
        "title": "Delete All Logs in Folder",
        "icon": "$(trash)"
      },
      {
        "command": "simple-log.deleteFile",
        "title": "Delete All Logs in File",
        "icon": "$(trash)"
      },
      {
        "command": "simple-log.deleteLogItem",
        "title": "Delete Log",
        "icon": "$(trash)"
      },
      {
        "command": "simple-log.jumpToLog",
        "title": "Jump to Source",
        "icon": "$(go-to-file)"
      }
    ],
    "keybindings": [
      {
        "command": "simple-log.insertLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "simple-log.commentAll",
        "key": "alt+shift+c",
        "mac": "alt+shift+c"
      },
      {
        "command": "simple-log.deleteAll",
        "key": "alt+shift+d",
        "mac": "alt+shift+d"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "simple-log.refreshTree",
          "when": "view == simpleLogTreeView",
          "group": "navigation@1"
        },
        {
          "command": "simple-log.clearCacheAndRefresh",
          "when": "view == simpleLogTreeView",
          "group": "navigation@2"
        },
        {
          "command": "simple-log.deleteAll",
          "when": "view == simpleLogTreeView",
          "group": "1_actions"
        }
      ],
      "view/item/context": [
        {
          "command": "simple-log.deleteFolder",
          "when": "view == simpleLogTreeView && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "simple-log.deleteFile",
          "when": "view == simpleLogTreeView && viewItem == file",
          "group": "inline"
        },
        {
          "command": "simple-log.jumpToLog",
          "when": "view == simpleLogTreeView && viewItem == log",
          "group": "inline@1"
        },
        {
          "command": "simple-log.deleteLogItem",
          "when": "view == simpleLogTreeView && viewItem == log",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "Simple-Log",
      "properties": {
        "simple-log.prefix": {
          "type": "string",
          "default": "üìù",
          "description": "Prefix symbol for log messages"
        },
        "simple-log.useBackticks": {
          "type": "boolean",
          "default": false,
          "description": "Use backticks (template strings) for JavaScript/TypeScript"
        },
        "simple-log.includeTimestamp": {
          "type": "boolean",
          "default": false,
          "description": "Include timestamp in log messages"
        },
        "simple-log.includeFilename": {
          "type": "boolean",
          "default": false,
          "description": "Include filename in log messages"
        },
        "simple-log.includeLineNumber": {
          "type": "boolean",
          "default": false,
          "description": "Include line number in log messages"
        },
        "simple-log.insertMode": {
          "type": "string",
          "enum": [
            "simple",
            "smart"
          ],
          "default": "smart",
          "description": "Log insertion mode",
          "enumDescriptions": [
            "Simple mode: Insert at next line (fast, reliable)",
            "Smart mode: Use AST analysis for intelligent positioning (JS/TS only)"
          ]
        },
        "simple-log.astAnalysisScope": {
          "type": "string",
          "enum": [
            "local",
            "file"
          ],
          "default": "file",
          "description": "AST analysis scope (only for smart mode)",
          "enumDescriptions": [
            "Analyze local context (¬±N lines) - fast for large files",
            "Analyze entire file - accurate for complex nesting (limited by maxFileLinesForFullParse)"
          ]
        },
        "simple-log.localContextLines": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 100,
          "description": "Number of context lines for local AST analysis (only for smart mode + local scope)"
        },
        "simple-log.maxFileLinesForFullParse": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 50000,
          "description": "Maximum file lines for full file parsing. Files larger than this will fallback to local analysis even if 'file' scope is selected"
        },
        "simple-log.treeView.excludeFolders": {
          "type": "array",
          "default": [
            "node_modules",
            "dist",
            "build",
            "out",
            ".git",
            "coverage",
            ".next",
            ".nuxt",
            "vendor"
          ],
          "items": {
            "type": "string"
          },
          "description": "Folder patterns to exclude from log scanning (supports regex). Default excludes common build and dependency folders."
        },
        "simple-log.treeView.includeFolders": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Folder patterns to include in log scanning (supports regex). If specified, only matching folders will be scanned. Leave empty to scan all folders (except excluded ones)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "lint": "oxlint src",
    "format": "oxlint --fix src",
    "test": "node --import tsx --test src/test/**/*.test.ts",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "oxc-parser": "^0.104.0"
  },
  "optionalDependencies": {
    "@oxc-parser/binding-darwin-arm64": "0.104.0",
    "@oxc-parser/binding-darwin-x64": "0.104.0",
    "@oxc-parser/binding-linux-arm64-gnu": "0.104.0",
    "@oxc-parser/binding-linux-arm64-musl": "0.104.0",
    "@oxc-parser/binding-linux-x64-gnu": "0.104.0",
    "@oxc-parser/binding-linux-x64-musl": "0.104.0",
    "@oxc-parser/binding-win32-arm64-msvc": "0.104.0",
    "@oxc-parser/binding-win32-x64-msvc": "0.104.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.19.0",
    "glob": "^10.5.0",
    "mocha": "^10.8.2",
    "oxlint": "^0.11.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zwmmm/simple-log"
  },
  "bugs": {
    "url": "https://github.com/zwmmm/simple-log/issues"
  },
  "homepage": "https://github.com/zwmmm/simple-log#readme",
  "license": "MIT"
}